<!-- Profile Page Structure -->
<div class="profile-card">
  <div class="profile-form">
    <%= form_with(model: @profile, local: true, class: 'user-form') do |form| %>
      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= form.label :program_names, "Programs" %>
        <%= form.text_field :programs, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= form.label :role %>
        <%= form.text_field :role, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= form.submit 'Save Profile', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <div class="profile-actions">
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-secondary' %>
  </div>
</div>
