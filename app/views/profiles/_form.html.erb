<!-- Profile Page Structure -->
<div class="profile-card">
  <div class="profile-form">
    <%= form_with(model: @profile, local: true, class: 'user-form') do |form| %>
      <div class="form-group">
        <div>
        <%= form.label :first_name %>
        </div>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>
    
      <div class="form-group">
      <div>
        <%= form.label :last_name %>
      </div>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>

      
      <div class="form-group">
      <div>
        <%= form.label :email %>
      </div>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
      

      <div class="form-group">
      <div>
        <%= form.label :address %>
        </div>
        <%= form.text_field :address, class: 'form-control' %>
      </div>

      <div class="form-group">
      <div>
        <%= form.label :contact %>
        </div>
        <%= form.text_field :contact, class: 'form-control' %>
      </div>
    
      <div class="form-group">
        <%= form.submit 'Save Profile', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>

  <div class="profile-actions">
    <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-secondary' %>
  </div>
</div>
