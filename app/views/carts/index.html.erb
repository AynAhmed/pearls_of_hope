<!-- cart.html.erb -->

<h1>Your Cart</h1>

<% if @user_cart.cart_products.present? %>
  <table>
    <thead>
      <tr>
        <th>Product</th>
        <th>Student</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user_cart.cart_products.each do |cart_product| %>
        <tr>
          <td><%= cart_product.product.product_name %></td>
          <td><%= cart_product.student.full_name %></td>
          <td>
            <%= link_to 'Remove', cart_product_path(cart_product), method: :delete, remote: true %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to 'Checkout', new_order_path %>
<% else %>
  <p>Your cart is empty.</p>
<% end %>

