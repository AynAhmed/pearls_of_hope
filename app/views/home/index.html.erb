<main>
 <!-- Welcome Section -->
  <section id="welcome">
    <h1>Welcome to Pearls</h1>
    <p>Mentoring the Leaders of Tomorrow!</p>
  </section>


<!-- New -testing -Slideshow/carousel Section -->

<section class="carousel-container">
  <div class="carousel">
    <div class="item active">
    <% carousel_image1 = fetch_image_by_title('diamonds3_carousel1') %>
    <%= image_tag(carousel_image1.image_data.url, alt: 'diamonds3_carousel1') if carousel_image1 %>

    </div>
    <div class="item">
    <% carousel_image2 = fetch_image_by_title('frontiers2_carousel2') %>
    <%= image_tag(carousel_image2.image_data.url, alt: 'frontiers2_carousel2') if carousel_image2 %>

    </div>
    <div class="item">
    <% carousel_image3 = fetch_image_by_title('pearls_carousel') %>
    <%= image_tag(carousel_image3.image_data.url, alt: 'pearls_carousel') if carousel_image3 %>

    </div>
    <div class="item">
    <% carousel_image4 = fetch_image_by_title('house_carousel') %>
    <%= image_tag(carousel_image4.image_data.url, alt: 'house_carousel') if carousel_image4 %>

  </div>
  </div>
  <h6 class="btn prev">◀</h6>
  <h6 class="btn next">▶</h6>
  <div class="dots"></div>
</section>


<br>
  <!-- About Us Section -->
  <section id="about">
    <h2>About Us</h2>
    <p class="textContent">
      <%= fetch_text_content_body_by_title("About Us Paragraph") %>
    </p>
    <!-- Remaining content... -->
  </section>
  <br>
  <h1>Our Programs</h1>
  <br>
<div style="display: flex; align-items: center; justify-content: center;">
  <div style="text-align: center;">
    <p>We offer programs for kids ages 5 to 15 years old</p>
    <a href="/programs" style="text-decoration: none; color: blue;">Learn More <span>&rarr;</span></a>
  </div>
  <img src="assets/programs.jpg" style="width: 300px; height: 300px; margin-left: 20px;">
</div>

<br>

<section id="newsletter-signup">
  <div class="newsletter-box">
    <h2>Sign Up for Our Newsletter</h2>
    <%= form_with(url: '/subscribe', method: 'post') do |f| %>
      <div class="form-group">
        <div class="input-wrapper">
          <input type="text" placeholder="First Name">
          <input type="text" placeholder="Last Name">
          <input type="text" placeholder="Email">
        <%= f.submit 'Sign Up', class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
</section>





    <!-- Facebook Embed -->
    <div class="facebook-embed-container">
      <div class="fb-page" data-href="https://www.facebook.com/PearlsofHopeMN/" data-tabs="timeline" data-width="" data-height="" data-small-header="false" data-adapt-container-width="true" data-hide-cover="false" data-show-facepile="true"></div>
    </div>
  </div>
</section>

<!-- Social media embedded section -->
<div class="social-media-content">
  <%= raw fetch_social_media_embed_by_title("SocMedia#1") %>
  <%= raw fetch_social_media_embed_by_title("SocMedia#2") %>
  <%= raw fetch_social_media_embed_by_title("SocMedia#3") %>
</div>
