<%= form_with(model: CartProduct.new, url: cart_products_path, method: :post) do |form| %>
    <div class="form-group">
      <%= form.label :product_id, "Select Product" %>
      <%= form.collection_select(:product_id, Product.all, :id, :product_name, prompt: "Choose a product") %>
    </div>

    <div class="form-group">
      <%= form.label :student_id, "Select Student" %>
      <%= form.collection_select(:student_id, Student.all, :id, :full_name, prompt: "Choose a student") %>
    </div>

    <div class="form-group">
      <%= form.submit "Add to Cart", class: "btn btn-primary" %>
    </div>
  <% end %>
