<% flash.each do |key, value| %>
  <% unless key == :notice && value == "Signed in successfully." %>
    <div class="alert alert-<%= key %>">
      <%= value %>
    </div>
  <% end %>
<% end %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

<div class="login-container">
    <div class="login-card">
        <h2 class="login-title">Login</h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="login-field">
                <%= f.label :email, class:"login-label" %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"login-inputfield" %>
            </div>

            <div class="login-field">
                <%= f.label :password, class:"login-label" %><br/>
                <%= f.password_field :password, autocomplete: "current-password", class:"login-inputfield" %>
            </div>

            <% if devise_mapping.rememberable? %>
                <div class="login-field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me %>
                </div>
            <% end %>

            <div class="actions">
                <%= f.submit "Log in", class: "submit-btn" %>
            </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
</div>

</body>
</html>
