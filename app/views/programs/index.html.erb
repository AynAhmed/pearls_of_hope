
<!-- app/views/programs/index.html.erb -->
<h1 class= "programsTitle">Programs</h1>

<!-- Programs Section -->

<section>
  <% @programs.each do |program| %>
    <article id="<%= program.name.parameterize %>" class="program-card">
    <h3><%= program.name %></h3>
    <p>Age Group: <%= program.age_group %></p>
      <p><%= program.description %></p>

      <%= link_to "Register Now!", products_path, class: "btn btn-primary"%>
      <!-- You can add more program details here if needed -->
    </article>
  <% end %>
</section>
