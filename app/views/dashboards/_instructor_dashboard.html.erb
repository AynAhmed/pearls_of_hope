<%# app/views/dashboards/_instructor_dashboard.html.erb %>
<div class="instructor-dashboard">
  <!-- Sidebar Navigation -->
  <div class="sidebar">

    <div class="welcomeInstructor" >Welcome, <%= user.first_name.capitalize %></div>

    <div class="sidebar-div">
      <%= link_to 'Profile', profiles_path, class: 'sidebar-link' %>
    </div>
  </div>
  
  <!-- Main Content -->
  <div class="main-content">
    <h2>Instructor's Dashboard</h2>

    <div class="programs">
    <h3>Programs</h3>
    <ul>
      <% programs.each do |program| %>
        <li>
        <%= link_to program.name, item_path(program) %> | <%= program.courseworks.count %>
          <div class ="add-coursework-cont">
            <br>
          <%= link_to "Add Coursework", new_item_coursework_path(program), class: "add-coursework-button" %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  

  